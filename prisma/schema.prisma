generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model School{
 id              Int     @id @default(autoincrement())
  name            String
  latitude        Float
  longitude       Float
  about           String
  instructions    String
  opening_hours   String
  open_on_weekends Boolean @default(false)
  images          Image[]
  feedback        feedback[] 
}


model Image {
  id        Int    @id @default(autoincrement())
  path      String
  school_id Int
  school    School @relation(fields: [school_id], references: [id])
}
model feedback{
  id        Int    @id @default(autoincrement())
  name      String
  email     String
  message   String
  school_id Int
  school    School @relation(fields: [school_id], references: [id])
}